    "version": "0.2.0",
    "configurations": [
      {
        "type": "msedge",
        "request": "launch",
        "name": "shipyard: edge",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}",
        "breakOnLoad": true,
        "pathMapping": {
          "/_karma_webpack_": "${workspaceFolder}"
        },
        "sourceMapPathOverrides": {
          "webpack:/*": "${webRoot}/*",
          "/./*": "${webRoot}/*",
          "/src/*": "${webRoot}/*",
          "/*": "*",
          "/./~/*": "${webRoot}/node_modules/*"
        },
        "preLaunchTask": "shipyard start"
      },
      {
        "type": "chrome",
        "request": "launch",
        "name": "shipyard: chrome",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}",
        "breakOnLoad": true,
        "pathMapping": {
          "/_karma_webpack_": "${workspaceFolder}"
        },
        "sourceMapPathOverrides": {
          "webpack:/*": "${webRoot}/*",
          "/./*": "${webRoot}/*",
          "/src/*": "${webRoot}/*",
          "/*": "*",
          "/./~/*": "${webRoot}/node_modules/*"
        },
        "preLaunchTask": "shipyard start"
      },
      {
        "type": "firefox",
        "request": "launch",
        "name": "shipyard: firefox",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}",
        "breakOnLoad": true,
        "pathMapping": {
          "/_karma_webpack_": "${workspaceFolder}"
        },
        "sourceMapPathOverrides": {
          "webpack:/*": "${webRoot}/*",
          "/./*": "${webRoot}/*",
          "/src/*": "${webRoot}/*",
          "/*": "*",
          "/./~/*": "${webRoot}/node_modules/*"
        },
        "preLaunchTask": "shipyard start"
      }
    ]
}